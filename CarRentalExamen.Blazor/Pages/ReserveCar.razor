@page "/reserve/{carId:int}"
@attribute [Authorize(Roles = "Customer")]
@inject ApiClient Api
@inject NavigationManager Navigation

<PageTitle>Reserve Car</PageTitle>

<div class="reserve-shell">
    @if (isLoadingCar)
    {
        <div class="d-flex justify-content-center align-items-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(loadError))
    {
        <div class="alert alert-danger m-4">
            @loadError
        </div>
    }
    else if (car is null)
    {
        <div class="container py-5">
            <div class="empty-state text-center">
                <h4>Car not found</h4>
                <p class="text-muted">The car you are looking for is unavailable right now.</p>
                <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/customer")'>Browse cars</button>
            </div>
        </div>
    }
    else
    {
        <div class="reserve-hero">
            <div class="container">
                <div class="d-flex align-items-center gap-3">
                    <img class="hero-thumb" src="@BuildImageUrl(car.ImageUrl)" alt="@($"{car.Make} {car.Model}")" onerror="this.src='/favicon.png';" />
                    <div>
                        <div class="eyebrow text-uppercase">Booking</div>
                        <h1 class="hero-title mb-1">@car.Make @car.Model</h1>
                        <div class="text-muted">@car.Year • @car.PlateNumber</div>
                    </div>
                </div>
                <div class="price-chip">
                    <div class="label">from</div>
                    <div class="price">@car.DailyPrice.ToString("0.00") €</div>
                    <div class="period">per day</div>
                </div>
            </div>
        </div>

        <div class="container py-4">
            <EditForm Model="formModel" OnValidSubmit="SubmitReservation">
                <DataAnnotationsValidator />
                <div class="row g-4">
                    <div class="col-lg-7">
                        <div class="panel">
                            <div class="panel-header">
                                <div>
                                    <div class="eyebrow text-uppercase">Trip details</div>
                                    <h4 class="mb-0">Choose your dates and options</h4>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(submitError))
                            {
                                <div class="alert alert-danger">@submitError</div>
                            }
                            @if (!string.IsNullOrEmpty(quoteError))
                            {
                                <div class="alert alert-warning mb-3">@quoteError</div>
                            }

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Start date</label>
                                    <InputDate class="form-control" @bind-Value="formModel.StartDate" @onchange="OnSelectionsChanged" min="@MinDate" />
                                    <ValidationMessage For="@(() => formModel.StartDate)" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">End date</label>
                                    <InputDate class="form-control" @bind-Value="formModel.EndDate" @onchange="OnSelectionsChanged" min="@MinDate" />
                                    <ValidationMessage For="@(() => formModel.EndDate)" />
                                </div>
                            </div>

                            <div class="mt-4">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <div class="eyebrow text-uppercase mb-1">Add-ons</div>
                                        <h5 class="mb-0">Enhance your trip</h5>
                                    </div>
                                    <span class="text-muted small">Optional</span>
                                </div>
                                <div class="option-grid">
                                    @foreach (var option in optionItems)
                                    {
                                        <div class="option-card">
                                            <div>
                                                <div class="option-name">@option.Name</div>
                                                <div class="option-desc text-muted">@option.Description</div>
                                            </div>
                                            <div class="option-actions">
                                                <div class="option-price">+@option.PricePerDay.ToString("0.00") € / day</div>
                                                <InputNumber class="form-control qty-input"
                                                             Value="option.Quantity"
                                                             ValueChanged="(int value) => OnQuantityChanged(option, value)"
                                                             ValueExpression="@(() => option.Quantity)"
                                                             min="0" />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-5">
                        <div class="summary-card">
                            <div class="summary-head">
                                <div>
                                    <div class="eyebrow text-uppercase">Your car</div>
                                    <h4 class="mb-0">@car.Make @car.Model</h4>
                                    <small class="text-muted">Daily rate: @car.DailyPrice.ToString("0.00") €</small>
                                </div>
                                <span class="badge bg-light text-dark">@car.Status</span>
                            </div>

                            <div class="quote-block">
                                <div class="quote-line">
                                    <span>Base price</span>
                                    <strong>@(quote is null ? "—" : quote.BasePrice.ToString("0.00") + " €")</strong>
                                </div>
                                <div class="quote-line">
                                    <span>Options</span>
                                    <strong>@(quote is null ? "—" : quote.OptionsPrice.ToString("0.00") + " €")</strong>
                                </div>
                                <div class="quote-total">
                                    <div>
                                        <div class="label">Estimated total</div>
                                        <small class="text-muted">@((quote?.TotalDays ?? 0) == 0 ? "" : $"{quote?.TotalDays} days")</small>
                                    </div>
                                    <div class="price">
                                        @if (isQuoteLoading)
                                        {
                                            <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                                        }
                                        else
                                        {
                                            @((quote is null ? "—" : quote.TotalPrice.ToString("0.00")) + " €")
                                        }
                                    </div>
                                </div>
                                <div class="availability" data-available="@quote?.IsAvailable">
                                    @if (quote?.IsAvailable == false)
                                    {
                                        <span>This car is not available for the selected dates.</span>
                                    }
                                    else
                                    {
                                        <span>Instant confirmation for your selected dates.</span>
                                    }
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 btn-lg" disabled="@(!CanSubmit)">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                    <span class="ms-2">Reserving...</span>
                                }
                                else
                                {
                                    <span>Reserve now</span>
                                }
                            </button>
                            <button type="button" class="btn btn-link w-100 mt-2" @onclick='() => Navigation.NavigateTo("/customer")'>
                                Back to cars
                            </button>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    }
</div>

<style>
