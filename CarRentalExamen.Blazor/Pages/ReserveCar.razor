</style>

@code {
    [Parameter] public int carId { get; set; }

    private Car? car;
    private string? loadError;
    private string? submitError;
    private ReservationCustomerCreateDto formModel = new()
    {
        StartDate = DateTime.Today,
        EndDate = DateTime.Today.AddDays(1)
    };
    private List<OptionItem> optionItems = new()
    {
        new("GPS Navigation", "Turn-by-turn guidance for new routes", 5),
        new("Baby Seat", "Safety first for little travelers", 7),
        new("Full Insurance", "Zero deductible coverage", 15)
    };

    private ReservationQuoteResponseDto? quote;
    private bool isLoadingCar = true;
    private bool isQuoteLoading;
    private bool isSubmitting;
    private string? quoteError;

    private string MinDate => DateTime.Today.ToString("yyyy-MM-dd");
    private bool CanSubmit => !isSubmitting
        && !isQuoteLoading
        && car is not null
        && car.Status == CarStatus.Available
        && quote is not null
        && quote.IsAvailable
        && quoteError is null;

    protected override async Task OnInitializedAsync()
    {
        formModel.CarId = carId;
        await LoadCarAsync();
    }

    private async Task LoadCarAsync()
    {
        try
        {
            isLoadingCar = true;
            car = await Api.GetCarAsync(carId);
            formModel.CarId = carId;
            if (car is not null)
            {
                await RefreshQuoteAsync();
            }
        }
        catch (Exception ex)
        {
            loadError = $"Unable to load car: {ex.Message}";
        }
        finally
        {
            isLoadingCar = false;
        }
    }

    private async Task OnSelectionsChanged(ChangeEventArgs? _ = null)
    {
        await RefreshQuoteAsync();
    }

    private async Task RefreshQuoteAsync()
    {
        quoteError = null;
        if (!ValidateDates())
        {
            quote = null;
            return;
        }

        formModel.Options = BuildOptions();

        isQuoteLoading = true;
        var (result, error) = await Api.GetReservationQuoteAsync(new ReservationQuoteRequestDto
        {
            CarId = formModel.CarId,
            StartDate = formModel.StartDate,
            EndDate = formModel.EndDate,
            Options = formModel.Options
        });

        quote = result;
        quoteError = error ?? result?.Error;
        isQuoteLoading = false;
    }

    private async Task OnQuantityChanged(OptionItem option, int value)
    {
        option.Quantity = Math.Max(0, value);
        await RefreshQuoteAsync();
    }

    private List<ReservationOptionDto> BuildOptions() => optionItems
        .Where(o => o.Quantity > 0)
        .Select(o => new ReservationOptionDto
        {
            OptionName = o.Name,
            PricePerDay = o.PricePerDay,
            Quantity = o.Quantity
        }).ToList();

    private bool ValidateDates()
    {
        if (formModel.EndDate < formModel.StartDate)
        {
            quoteError = "End date must be after start date.";
            return false;
        }

        return true;
    }

    private async Task SubmitReservation()
    {
        submitError = null;
        if (!ValidateDates())
        {
            submitError = quoteError;
            return;
        }

        formModel.Options = BuildOptions();
        isSubmitting = true;

        var (success, error) = await Api.CreateMyReservationAsync(formModel);
        if (success)
        {
            Navigation.NavigateTo("/my/reservations");
            return;
        }

        submitError = error ?? "We could not create your reservation. Please try again.";
        isSubmitting = false;
    }

    private string BuildImageUrl(string? imageUrl)
    {
        if (string.IsNullOrWhiteSpace(imageUrl))
        {
            return "/favicon.png";
        }

        return imageUrl.StartsWith("http", StringComparison.OrdinalIgnoreCase)
            ? imageUrl
            : Navigation.ToAbsoluteUri(imageUrl).ToString();
    }

    private class OptionItem
    {
        public OptionItem(string name, string description, decimal pricePerDay)
        {
            Name = name;
            Description = description;
            PricePerDay = pricePerDay;
        }

        public string Name { get; set; }
        public string Description { get; set; }
        public decimal PricePerDay { get; set; }
        public int Quantity { get; set; }
    }
}
